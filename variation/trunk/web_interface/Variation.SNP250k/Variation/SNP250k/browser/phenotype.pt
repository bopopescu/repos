<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      >
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">
    
    <div tal:replace="structure provider:plone.abovecontenttitle" />
    
    <h1 class="documentFirstHeading">
            <span metal:use-macro="python:context.widget('title', mode='view')" />
        </h1>
	
	<div tal:replace="structure provider:plone.belowcontenttitle" />
	
	<div metal:use-macro="here/document_actions/macros/document_actions">
        Document actions (print, sendto etc)
    </div>

        <div class="documentDescription">
            <span metal:use-macro="python:context.widget('description', mode='view')" />
        </div>  

		<div tal:replace="structure provider:plone.abovecontentbody" />
		
        <p tal:condition="python: not is_editable"
           i18n:translate="no_body_text"
           class="discreet">
            This item does not have any body text, click the edit tab to change it.
        </p>
        
        <table class="listing" tal:condition="python:1">
            <thead>
                <tr>
                	<th i18n:translate="column_label_title">Phenotype Method ID</th>
                    <th i18n:translate="column_label_title">Short Name</th>
                    <th i18n:translate="column_label_title">Method Description</th>
                </tr>
            </thead>
            <tbody>
                <tr tal:repeat="method_description context/method_description_ls">
                	<td> <span tal:content="context/method_id_ls" /> </td>
                    <td> <tal:block repeat="short_name context/short_name_ls"> <span tal:content="short_name" /> </tal:block> </td>
                	<td tal:content="method_description" />
                </tr>
            </tbody>
        </table>
    
    <div tal:replace="structure provider:plone.belowcontentbody" />
    </tal:main-macro>
</metal:main>


</body>
</html>

